<%= form_for user, :html => {:class => "ui form", :multipart => true} do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :room_id %>
      <%= f.select(:room_id, Room.all.collect {|c| [c.name, c.id]}) %>
    </div>


    <div class="field">
      <%= f.file_field :avatar %>
    </div>


    <div class="field">
      <%= f.label :ext %>
      <%= f.text_field :ext %>
    </div>
    <div class="field">
      <div class="ui checkbox">
        <%= f.check_box :isadmin %>
        <%= f.label "Admin" %>
      </div>

    </div>
    <% if user.errors.any? %>
        <div class="ui error message" style="display: block">
          <div class="header"><%= pluralize(user.errors.count, "error") %> prohibited this user from being
            saved:
          </div>
          <ul class="list">
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="actions">
      <%= f.submit class: "ui primary button" %>
    </div>
<% end %>

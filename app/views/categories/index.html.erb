<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Delete</th>

    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to semantic_icon('play'), category %></td>
        <td><%= link_to semantic_icon('edit'), edit_category_path(category) %></td>
        <td><%= link_to semantic_icon('remove'), category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path ,class: 'ui primary button' %>

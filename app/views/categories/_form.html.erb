<%= form_for(category,:html => {:class => "ui form"}) do |f| %>


  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

    <% if category.errors.any? %>
        <div class="ui error message" style="display: block">
          <div class="header"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</div>
          <ul class="list">
            <% category.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="actions">
      <%= f.submit class: "ui primary button" %>
    </div>
<% end %>
